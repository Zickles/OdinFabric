{
  "schemaVersion": 1,
  "id": "odining",
  "version": "${version}",

  "name": "Odin",
  "description": "no way",
  "authors": [
    "Odtheking"
  ],

  "license": "BSD 3-Clause",
  "icon": "assets/odin/icon.png",

  "environment": "*",
  "entrypoints": {
    "modmenu": [
      "me.odinmod.odin.clickgui.ModMenuIntegration"
    ],
    "main": [
      {
        "adapter": "kotlin",
        "value": "me.odinmod.odin.OdinMod"
      }
    ]
  },
  "mixins": [
    "odin.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric-api": "*",
    "minecraft": "~${minecraft_version}",
    "java": ">=21",
    "fabric-language-kotlin": ">=${fabric_kotlin_version}"
  },

  "contact": {
    "homepage": "https://modrinth.com/mod/odin",
    "sources": "https://github.com/odtheking/OdinFabric"
  },

  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/8Fqsg5xBP3"
      },
      "update_checker": true
    }
  }
}